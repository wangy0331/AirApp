<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radio_group_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            >

            <RadioButton
                android:id="@+id/shishi_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:checked="true"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/radio"
                android:text="@string/shishi" />

            <RadioButton
                android:id="@+id/ri_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/radio"
                android:text="@string/ri"/>

            <RadioButton
                android:id="@+id/zhou_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/radio"
                android:layout_marginRight="2dp"
                android:text="@string/zhou"/>

            <RadioButton
                android:id="@+id/yue_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/radio"
                android:layout_marginRight="2dp"
                android:text="@string/yue"/>

            <RadioButton
                android:id="@+id/bannian_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/radio"
                android:text="@string/bannian"/>

            <RadioButton
                android:id="@+id/nian_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/radio"
                android:text="@string/nian"/>


        </RadioGroup>

    <!--<RelativeLayout-->
