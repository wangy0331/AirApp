        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
